<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/mImage"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0"
        android:fontFamily="cursive"
        android:text="Ains Attire"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/baseline_location_on_black_18dp"
            android:paddingLeft="36dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:fontFamily="cursive"
            android:paddingLeft="18sp"
            android:paddingTop="9sp"
            android:text="Gulshan-e-Hadeed PhaseII Bin Qasim, Karachi"
            android:textColor="@color/colorAccent" />


    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/baseline_call_black_18dp"
           android:paddingLeft="36dp"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="cursive"
           android:paddingLeft="18sp"
           android:paddingTop="9sp"
           android:text="+92341-0290116"
           android:textColor="@color/colorAccent" />

   </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0"

        android:fontFamily="cursive"
        android:text="About"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:fontFamily="cursive"
        android:paddingBottom="18sp"
        android:paddingLeft="36sp"
        android:paddingTop="6sp"

        android:text="Ain's Attire offers unique apparel to girl and women who value versatility, style, and comfort. "
        android:textColor="@android:color/background_dark"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
